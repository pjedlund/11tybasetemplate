---
layout: base.njk
---

<article id="{{ title | slug }}" class="article container h-entry" itemscope itemtype="http://schema.org/BlogPosting" aria-labelledby="{{ title | slug }}-title">
    <header class="article__header">

        <h1 id="{{ title | slug }}-title" class="article__title p-name title" itemprop="headline">{{ title }}</h1>

        <div class="article__meta">
            <p class="u-align-center">
            	<time class="article__date dt-published" itemprop="datePublished" datetime="{{ page.date | dateToISO }}">Published: {{ page.date | readableDate('yyyy-LL-dd') }}</time>
							<span> | </span>
							<time class="article__updated dt-updated" datetime="{{ last_updated | dateToISO }}">Updated: {{ last_updated | readableDate('yyyy-LL-dd')}}</time>
						</p>
						{% if tags %}
						<ul>
							{% for tag in tags %}
							<li><a href="/posts/tag/{{ tag | slugify }}">{{ tag }}</a></li>
							{% endfor %}
						</ul>
						{% endif %}
        </div>

    </header>

    <div class="article__content e-content markdown" itemprop="articleBody">
				{{ date }}
        {{ content | safe }}
    </div>


    <div class="article__footer">
        <div hidden>
            <a class="u-url" href="{{ page.url | url | absoluteUrl(site.url) }}">{{ title }}</a>
            <p class="h-card p-author">
                <a class="p-name u-url" rel="author" href="{{ author.url }}">{{ author.name }}</a>
                {# <img class="u-photo" src="{{ author.avatar | url | absoluteUrl(author.url) }}" /> #}
            </p>
        </div>
    </div>

</article>
